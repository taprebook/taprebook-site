---
import { Icon } from 'astro-icon/components';
import { SITE } from 'astrowind:config';
import { getHomePermalink } from '~/utils/permalinks';

interface Link { text?: string; href?: string; ariaLabel?: string; icon?: string; }
interface Links { title?: string; links: Array<Link>; }

export interface Props {
  links: Array<Links>;
  secondaryLinks: Array<Link>;
  socialLinks: Array<Link>;
  footNote?: string;
  theme?: string; // kept for API compatibility
}

const { socialLinks = [], secondaryLinks = [], links = [], footNote = '' } = Astro.props;
---

<footer
  class="relative not-prose overflow-hidden
         border-t border-white/40
         bg-white/60 supports-[backdrop-filter]:bg-white/45
         backdrop-blur-md rounded-t-3xl"
>
  <!-- soft highlight edge -->
  <div class="pointer-events-none absolute inset-0 bg-gradient-to-b from-white/30 via-transparent to-transparent"></div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 text-slate-900">
    <div class="grid grid-cols-12 gap-4 gap-y-8 sm:gap-8 py-8 md:py-12">
      <div class="col-span-12 lg:col-span-4">
        <div class="mb-2">
          <a class="inline-block font-bold text-xl" href={getHomePermalink()}>{SITE?.name}</a>
        </div>
        <div class="text-sm flex gap-1 text-slate-700">
          {
            secondaryLinks.map(({ text, href }, index) => (
              <>
                {index !== 0 ? ' Â· ' : ''}
                <a
                  class="hover:underline transition duration-150 ease-in-out text-slate-700"
                  href={href}
                  set:html={text}
                />
              </>
            ))
          }
        </div>
      </div>

      {
        links.map(({ title, links }) => (
          <div class="col-span-6 md:col-span-3 lg:col-span-2">
            <div class="font-medium mb-2 text-slate-900">{title}</div>
            {links && Array.isArray(links) && links.length > 0 && (
              <ul class="text-sm">
                {links.map(({ text, href, ariaLabel }) => (
                  <li class="mb-2">
                    <a
                      class="hover:underline transition duration-150 ease-in-out text-slate-700"
                      href={href}
                      aria-label={ariaLabel}
                    >
                      <Fragment set:html={text} />
                    </a>
                  </li>
                ))}
              </ul>
            )}
          </div>
        ))
      }
    </div>

    <div class="md:flex md:items-center md:justify-between py-6 md:py-8">
      {
        socialLinks?.length ? (
          <ul class="flex mb-4 md:order-1 -ml-2 md:ml-4 md:mb-0">
            {socialLinks.map(({ ariaLabel, href, text, icon }) => (
              <li>
                <a
                  class="hover:bg-white/60 focus:outline-none focus:ring-4 focus:ring-black/5
                         rounded-lg text-sm p-2.5 inline-flex items-center text-slate-700"
                  aria-label={ariaLabel}
                  href={href}
                >
                  {icon && <Icon name={icon} class="w-5 h-5" />}
                  <Fragment set:html={text} />
                </a>
              </li>
            ))}
          </ul>
        ) : ''
      }

      <div class="text-sm text-slate-600">
        <Fragment set:html={footNote} />
      </div>
    </div>
  </div>
</footer>


