---
import Layout from '~/layouts/PageLayout.astro';
const lastUpdated = new Date().toLocaleDateString();
---

<Layout
  metadata={{
    title: 'Terms of Service',
    description: 'The terms that govern your use of TapRebook.',
  }}
>
