---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'TapRebook — Automated WhatsApp reception that keeps schedules full',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero -->
  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Book a 10-min demo',
        href: '/contact/',
        icon: 'tabler:calendar',
      },
      { text: 'WhatsApp us', href: 'https://wa.me/91XXXXXXXXXX', icon: 'tabler:brand-whatsapp' },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'TapRebook WhatsApp automation' }}
  >
    <Fragment slot="title">
      Automated WhatsApp reception that <span class="text-accent dark:text-white">keeps schedules full</span>
    </Fragment>

    <Fragment slot="subtitle">
      TapRebook helps clinics and service teams cut no-shows, speed up scheduling & rescheduling, and turn routine
      messaging into smooth, measurable workflows.
    </Fragment>
  </Hero>

  <!-- One-line brand note -->
  <Note title="What is TapRebook?" description="One brand. Multiple modules you can turn on as you grow." />

  <!-- Core outcomes / benefits -->
  <Features
    id="features"
    tagline="Outcomes"
    title="Results you can aim for from day one"
    subtitle="Start with Reception, add other modules as needed."
    items={[
      {
        title: 'Fewer no-shows',
        description: 'Smart reminders and self-rescheduling cut missed appointments by 20–40%.',
        icon: 'tabler:bell',
      },
      {
        title: 'Less front-desk load',
        description: 'AI handles routine chats; staff focuses on patients and exceptions.',
        icon: 'tabler:robot',
      },
      {
        title: 'Faster responses',
        description: 'Reply on WhatsApp with structured flows, not scattered messages.',
        icon: 'tabler:brand-whatsapp',
      },
      {
        title: 'Measurable ops',
        description: 'See completions, drop-offs, and follow-ups in one place.',
        icon: 'tabler:chart-bar',
      },
      {
        title: 'Simple rollout',
        description: 'Works with your existing tools. Start with one number and team.',
        icon: 'tabler:plug-connected',
      },
      {
        title: 'Secure & consent-based',
        description: 'Opt-in messaging with audit trail and data-handling best practices.',
        icon: 'tabler:shield-check',
      },
    ]}
  />

  <!-- How it works -->
  <Steps
    title="How TapRebook works"
    items={[
      {
        title: 'Step 1: <span class="font-medium">Inquire</span>',
        description: 'Patient or customer messages your WhatsApp number or taps a link/QR.',
        icon: 'tabler:message-circle',
      },
      {
        title: 'Step 2: <span class="font-medium">Assist</span>',
        description: 'AI guides scheduling, rescheduling, reminders, and simple FAQs.',
        icon: 'tabler:sparkles',
      },
      {
        title: 'Step 3: <span class="font-medium">Complete</span>',
        description: 'Confirmations, follow-ups, and reviews—staff only handles exceptions.',
        icon: 'tabler:check',
      },
      { title: 'Ready!', icon: 'tabler:thumb-up' },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1616198814651-e71f960c3180?auto=format&fit=crop&w=987&q=80',
      alt: 'TapRebook steps',
    }}
  />

  <!-- Modules overview -->
  <Features2
    title="TapRebook modules"
    subtitle="Start with Reception, then add more as you expand."
    tagline="Solutions"
    items={[
      {
        title: 'Reception',
        description: 'AI receptionist for clinics—reminders, self-rescheduling, follow-ups.',
        icon: 'tabler:stethoscope',
      },
      {
        title: 'Labs',
        description: 'Diagnostics / radiology coordination with prep instructions and nudges.',
        icon: 'tabler:flask-2',
      },
      {
        title: 'Pharma',
        description: 'Refill & chronic-care reminders with escalation to staff when needed.',
        icon: 'tabler:pills',
      },
      {
        title: 'DentalLab',
        description: 'Dentist ↔ lab case tracker with pickup/drop and photo approvals.',
        icon: 'tabler:tooth',
      },
      {
        title: 'Stay',
        description: 'Guest messaging for homestays/houseboats: pre-arrival info & upsells.',
        icon: 'tabler:home',
      },
      {
        title: 'Campus',
        description: 'Schools/coaching parent comms: notices, fees, attendance, events.',
        icon: 'tabler:school',
      },
      {
        title: 'Queue',
        description: 'Restaurant waitlist & preorders to reduce walk-aways and speed turns.',
        icon: 'tabler:clipboard-list',
      },
      {
        title: 'And more…',
        description: 'Modular building blocks so you can grow without switching systems.',
        icon: 'tabler:apps',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- Proof / reassurance strip -->
  <Content
    isReversed
    tagline="Why teams choose TapRebook"
    title="Simple to launch. Easy to run."
    items={[
      {
        title: 'Fast start',
        description: 'Get a working WhatsApp flow without changing your core systems.',
      },
      {
        title: 'Operator-friendly',
        description: 'Your staff can take over any chat or mark exceptions in seconds.',
      },
      {
        title: 'Scales with you',
        description: 'Add modules and locations later—same brand, shared data.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?auto=format&fit=crop&w=1200&q=80',
      alt: 'Operations image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Focus on outcomes, not tools</h3>
      Start with a single number and upgrade over time—no rebuilds.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- FAQs -->
  <FAQs
    title="Frequently asked"
    subtitle="Straight answers to common questions."
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'Does this replace my receptionist?',
        description:
          'No. TapRebook handles routine chats and scheduling. Your staff focuses on in-person care and exceptions.',
      },
      {
        title: 'Do patients need an app?',
        description:
          'No app to install—everything runs on WhatsApp using your business number and approved templates.',
      },
      {
        title: 'What about data security and consent?',
        description:
          'We use consent-based messaging with audit trails. You control retention and escalation rules.',
      },
      {
        title: 'Which EMR/PMS do you integrate with?',
        description:
          'You can start without any integration. Optional connectors and exports are available as you grow.',
      },
      {
        title: 'How is it priced?',
        description:
          'Simple monthly plans. Start with Reception; add modules as needed. See the Pricing page for details.',
      },
    ]}
  />

  <!-- Optional placeholder stats -->
  <Stats
    stats={[
      { title: 'No-show reduction', amount: '20–40%' },
      { title: 'Fewer phone interruptions', amount: '50–70%' },
      { title: 'Channels', amount: 'WhatsApp' },
      { title: 'Modules', amount: '7+' },
    ]}
  />

  <!-- Final CTA -->
  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Book a 10-min demo',
        href: '/contact/',
        icon: 'tabler:calendar-event',
      },
      {
        text: 'See modules',
        href: '/modules/',
        icon: 'tabler:layout-grid',
      },
    ]}
  >
    <Fragment slot="title">See TapRebook in action</Fragment>

    <Fragment slot="subtitle">
      Start with Reception and add modules over time—no new domain, no redesigns, just results.
    </Fragment>
  </CallToAction>
</Layout>


