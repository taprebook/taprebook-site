---
import Layout from '~/layouts/PageLayout.astro';
---

<Layout metadata={{ title: 'Thanks!', description: 'We received your message.' }}>
  <section class="py-16 text-center">
    <h1 class="text-4xl md:text-5xl font-extrabold tracking-tight dark:text-white">Thanks — we got it!</h1>
    <p class="mt-4 text-lg text-slate-600 dark:text-slate-300">
      We’ll reply within one business day. If it’s urgent, WhatsApp us.
    </p>
    <div class="mt-6">
      <a class="btn btn-primary" href="/">Back to homepage</a>
    </div>
  </section>
</Layout>
