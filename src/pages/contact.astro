---
import Layout from '~/layouts/PageLayout.astro';
const FORM_ENDPOINT = 'https://formspree.io/f/xjkaeavd'; // <-- replace in Step 3
---

<Layout
  metadata={{
    title: 'Contact — Book a TapRebook demo',
    description: 'Tell us a bit about your use case and we’ll get back in one business day.',
  }}
>
  <section class="py-12 md:py-16">
    <h1 class="text-4xl md:text-5xl font-extrabold tracking-tight dark:text-white">
      Book a 10-min demo
    </h1>
    <p class="mt-3 text-lg text-slate-600 dark:text-slate-300 max-w-2xl">
      Share a few details and we’ll reply within one business day.
    </p>
  </section>

  <section class="grid gap-8 md:grid-cols-3">
    <div class="md:col-span-2 card p-6">
      <form id="contactForm" class="grid gap-4" data-endpoint={FORM_ENDPOINT}>
        <div class="grid gap-4 md:grid-cols-2">
          <div>
            <label class="block text-sm font-medium mb-1">Full name</label>
            <input class="input w-full" type="text" name="name" required />
          </div>
          <div>
            <label class="block text-sm font-medium mb-1">Work email</label>
            <input class="input w-full" type="email" name="email" required />
          </div>
        </div>

        <div class="grid gap-4 md:grid-cols-2">
          <div>
            <label class="block text-sm font-medium mb-1">Phone / WhatsApp</label>
            <input class="input w-full" type="tel" name="phone" />
          </div>
          <div>
            <label class="block text-sm font-medium mb-1">Interested in</label>
            <select class="input w-full" name="module">
              <option>Reception</option>
              <option>Labs</option>
              <option>Pharma</option>
              <option>DentalLab</option>
              <option>Stay</option>
              <option>Campus</option>
              <option>Queue</option>
              <option>Not sure</option>
            </select>
          </div>
        </div>

        <div>
          <label class="block text-sm font-medium mb-1">Message</label>
          <textarea class="textarea w-full" rows="5" name="message" placeholder="What are you trying to improve?"></textarea>
        </div>

        <!-- Honeypot -->
        <input type="text" name="_gotcha" class="hidden" tabindex="-1" autocomplete="off" />

        <div class="flex items-center gap-3 pt-2">
          <button class="btn btn-primary" type="submit">Send</button>
          <span id="formStatus" class="text-sm text-slate-500"></span>
        </div>
      </form>
    </div>

    <aside class="card p-6">
      <h3 class="text-lg font-semibold dark:text-white">Prefer WhatsApp?</h3>
      <p class="mt-2 text-slate-600 dark:text-slate-300">
        Message us anytime.
      </p>
      <a class="btn btn-secondary mt-4" href="https://wa.me/91XXXXXXXXXX">WhatsApp TapRebook</a>
      <div class="mt-6 text-sm text-slate-500">
        You can also email <a class="underline" href="mailto:hello@taprebook.com">hello@taprebook.com</a>.
      </div>
    </aside>
  </section>

  <script is:inline>
    const form = document.getElementById('contactForm');
    const statusEl = document.getElementById('formStatus');
    form?.addEventListener('submit', async (e) => {
      e.preventDefault();
      statusEl.textContent = 'Sending…';
      const endpoint = form.dataset.endpoint;
      try {
        const res = await fetch(endpoint, {
          method: 'POST',
          headers: { 'Accept': 'application/json' },
          body: new FormData(form),
        });
        if (res.ok) {
          window.location.href = '/thanks/';
          return;
        }
        const data = await res.json().catch(() => ({}));
        statusEl.textContent = data?.errors?.[0]?.message || 'Could not send. Please try again.';
      } catch {
        statusEl.textContent = 'Network error. Please try again.';
      }
    });
  </script>
</Layout>

