---
import '~/assets/styles/tailwind.css';

import { I18N } from 'astrowind:config';

import CommonMeta from '~/components/common/CommonMeta.astro';
import Favicons from '~/components/Favicons.astro';
import CustomStyles from '~/components/CustomStyles.astro';
// import ApplyColorMode from '~/components/common/ApplyColorMode.astro'; // ❌ remove
import Metadata from '~/components/common/Metadata.astro';
import SiteVerification from '~/components/common/SiteVerification.astro';
import Analytics from '~/components/common/Analytics.astro';
import BasicScripts from '~/components/common/BasicScripts.astro';

// View Transitions (OK to keep)
import { ClientRouter } from 'astro:transitions';

import type { MetaData as MetaDataType } from '~/types';

// ⚠️ Do NOT import GlassTriBg here if PageLayout.astro already renders it
// import GlassTriBg from '~/components/visuals/GlassTriBg.astro';

export interface Props {
  metadata?: MetaDataType;
}

const { metadata = {} } = Astro.props;
const { language, textDirection } = I18N;
---

<!doctype html>
<html lang={language} dir={textDirection} class="2xl:text-[20px]">
  <head>
    <CommonMeta />
    <Favicons />
    <CustomStyles />
    <!-- <ApplyColorMode />  ❌ removed -->
    <Metadata {...metadata} />
    <SiteVerification />
    <Analytics />

    <!-- View Transitions -->
    <ClientRouter fallback="swap" />

    <!-- Force LIGHT MODE site-wide -->
    <style is:global>
      /* Tell the browser we are light-only (affects form controls/scrollbars) */
      html { color-scheme: light; }

      /* Keep page surface transparent so your dynamic background (mounted in PageLayout) shows */
      html, body { background: transparent !important; }
    </style>
  </head>

  <body class="antialiased text-default tracking-tight">
    <!-- Dynamic background is mounted in PageLayout.astro (avoid duplicating it here). -->
    <slot />

    <BasicScripts />
  </body>
</html>
